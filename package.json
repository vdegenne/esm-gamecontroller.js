{
	"name": "esm-gamecontroller.js",
	"version": "2.0.0",
	"description": "A esm port of gamecontroller.js",
	"main": "lib/index.js",
	"module": "lib/index.js",
	"type": "module",
	"scripts": {
		"build": "wireit",
		"test": "wireit",
		"dev": "vite dev/ --host"
	},
	"wireit": {
		"build": {
			"command": "tsc --pretty",
			"clean": "if-file-deleted",
			"files": [
				"tsconfig.json",
				"src"
			],
			"output": [
				"lib"
			]
		},
		"test": {
			"command": "jest --coverage",
			"files": [
				"tests",
				"jest.config.cjs"
			],
			"dependencies": [
				"build"
			]
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vdegenne/esm-gamecontroller.js.git"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.11",
		"@types/node": "^22.10.5",
		"jest": "^29.7.0",
		"typescript": "^5.7.3",
		"vite": "^6.0.7",
		"wireit": "^0.14.9"
	},
	"license": "MIT",
	"keywords": [
		"game control",
		"gamepad",
		"game controller",
		"game control",
		"controller",
		"gaming",
		"web api",
		"html5 api",
		"gamepad api"
	],
	"files": [
		"/lib"
	],
	"directories": {
		"test": "tests"
	}
}
